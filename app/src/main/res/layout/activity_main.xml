<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spin3"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/spin2"
        app:layout_constraintStart_toStartOf="@+id/spin2"
        app:layout_constraintTop_toBottomOf="@+id/spin2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002"
        app:srcCompat="@drawable/resistor" />

    <ImageView
        android:id="@+id/Band1"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="210dp"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <ImageView
        android:id="@+id/Band2"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <ImageView
        android:id="@+id/Band3"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.46"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:text="Valor:"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin3"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="0 ohms"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/spin2"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Spinner
        android:id="@+id/spin2"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="@+id/spin1"
        app:layout_constraintStart_toStartOf="@+id/spin1"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textSpin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="28dp"
        android:text="1era Banda de color"
        app:layout_constraintBottom_toBottomOf="@+id/spin1"
        app:layout_constraintEnd_toStartOf="@+id/spin1"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/spin1" />

    <TextView
        android:id="@+id/textSpin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:text="2nda Banda de color"
        app:layout_constraintBottom_toBottomOf="@+id/spin2"
        app:layout_constraintEnd_toStartOf="@+id/spin2"
        app:layout_constraintStart_toStartOf="@+id/textSpin1"
        app:layout_constraintTop_toBottomOf="@+id/textSpin1" />

    <TextView
        android:id="@+id/textSpin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="28dp"
        android:text="3era Banda de color"
        app:layout_constraintBottom_toBottomOf="@+id/spin3"
        app:layout_constraintEnd_toStartOf="@+id/spin3"
        app:layout_constraintStart_toStartOf="@+id/textSpin2"
        app:layout_constraintTop_toBottomOf="@+id/textSpin2" />
</androidx.constraintlayout.widget.ConstraintLayout>